{
  "config": {
    "order": 50,
    "description": "manage Monaca configuration",
    "longDescription": [
      "Manage proxy and API endpoint configuration"
    ],
    "usage": [
      "monaca config [<options>]"
    ],
    "options": [
      [
        "proxy <url>",
        "If <url> is unset, the current proxy server will be displayed"
      ],
      [
        "endpoint <url>",
        "If <url> is unset, the current API endpoint will be displayed"
      ],
      [
        "",
        ""
      ],
      [
        "--help",
        "Display config helper"
      ],
      [ "--reset",
        "Reset to the default value"
      ]
    ],
    "examples": [
      "monaca config --help\n",
      "monaca config proxy",
      "monaca config proxy http://my.proxy.com:8080",
      "monaca config proxy --reset\n",
      "monaca config endpoint",
      "monaca config endpoint my.endpoint.com",
      "monaca config endpoint --reset"
    ]
  },
  "reconfigure": {
    "order": 70,
    "description": "generate default project configurations",
    "longDescription": [
      "Generate default project configurations and files.",
      "Running it without arguments will generate everything."
    ],
    "usage": [
      "monaca configurate"
    ],
    "options": [
      [
        "--transpile",
        "Generate transpile configuration files (both dev and prod)"
      ],
      [
        "--dependencies",
        "Install required build dependencies."
      ],
      [
        "--components",
        "Generate components folder."
      ]
    ],
    "examples": [
      "monaca reconfigure",
      "monaca reconfigure --transpile --components"
    ]
  }
}
