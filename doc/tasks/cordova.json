{
  "platform": {
    "order": 31,
    "category": "cordova",
    "description": "add, update and remove platforms",
    "longDescription": [
      "Manage platforms. Can be used to add or remove platforms.",
      "Also contains commands to update existing platforms."
    ],
    "usage": "monaca platform <command> [options]",
    "options": [
      [
        "add|remove|rm <platform>",
        "add or remove a platform"
      ],
      [
        "list|ls",
        "list available platforms"
      ],
      [
        "update|up <platform>",
        "update a platform"
      ],
      [
        "check",
        "list platforms that can be updated with `platform update`"
      ]
    ],
    "examples": [
      "monaca platform",
      "monaca platform add android",
      "monaca platform rm ios",
      "monaca platform check"
    ],
    "showInHelp": false
  },
  "plugin": {
    "order": 70,
    "category": "cordova",
    "description": "manage Cordova Plugin",
    "longDescription": [
      "Manage installed plugins",
      "",
      "Used to add or remove plugins. Can also list installed plugins."
    ],
    "usage": "monaca plugin <command> [options]",
    "options": [
      [
        "add|rm <plugin>",
        "add or remove a plugin"
      ],
      [
        "ls|list",
        "list currently installed plugins"
      ]
    ],
    "examples": [
      "monaca plugin add cordova-plugin-camera",
      "monaca plugin rm cordova-plugin-camera",
      "monaca plugin ls"
    ]
  },
  "prepare": {
    "order": 33,
    "category": "cordova",
    "description": "prepare project for build",
    "longDescription": "Copies file for a specified (or all) platform(s).",
    "usage": "monaca prepare [platform]",
    "examples": [
      "monaca prepare",
      "monaca prepare android"
    ],
    "showInHelp": false
  },
  "compile": {
    "order": 34,
    "category": "cordova",
    "description": "build the project",
    "longDescription": "Build the project for a specified platform, or all platforms.",
    "usage": "monaca compile [platform]",
    "examples": [
      "monaca compile",
      "monaca compile android"
    ],
    "showInHelp": false
  },
  "run": {
    "order": 35,
    "category": "cordova",
    "description": "deploys project on a device / emulator",
    "longDescription": "Deploys app on a specified platform or emulator.",
    "usage": "monaca run [platform]",
    "options": [
      [
        "--debug",
        "build a debug version"
      ],
      [
        "--release",
        "build a release version"
      ],
      [
        "--device=FOO",
        "deploy on a specific device"
      ],
      [
        "--emulator=FOO",
        "deploy on a specific emulator"
      ],
      [
        "--target=FOO",
        "deploy on a specific target"
      ]
    ],
    "examples": [
      "monaca run",
      "monaca run android",
      "monaca run ios --emulator"
    ],
    "showInHelp": false
  },
  "build": {
    "order": 36,
    "category": "cordova",
    "description": "shortcut for prepare, then compile",
    "longDescription": "Shortcut for `monaca prepare` then `monaca compile`.",
    "usage": "monaca build [platform]",
    "examples": [
      "monaca build ios",
      "monaca build"
    ],
    "showInHelp": false
  },
  "emulate": {
    "order": 37,
    "category": "cordova",
    "description": "run project in emulator",
    "longDescription": "Run project in emulator. Shortcut for `monaca run --emulator`.",
    "usage": "monaca emulate [platform]",
    "examples": [
      "monaca emulate android",
      "monaca emulate"
    ],
    "showInHelp": false
  }
}
